<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.tasks() %>">tasks</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Edit tasks</a></li>
</ul>

<div class="page-header">
    <h1>Edit tasks</h1>
</div>

<% var form = formFor(tasks, {action: pathTo.tasks(tasks), method: 'PUT', id: "tasks-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Update tasks', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.tasks(tasks), {class: 'btn'}) %>
</div>
<%- form.end() %>
