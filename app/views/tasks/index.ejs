<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="/tasks">tasks</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Index of tasks</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New tasks', '/tasks/new', {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (tasks.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tasks.forEach(function (tasks) { %>
                <tr>
                    <td><strong><%- link_to(tasks.name + "("+tasks.id+")", 'tasks/'+tasks.id) %></strong></td>
                    <td>
                        <%- link_to('<i class="icon-edit"></i> Edit', 'tasks/edit/'+tasks.id, {class: 'btn btn-mini'}) %>
                        <%- link_to('<i class="icon-remove icon-white"></i> Delete', 'tasks/destroy/'+tasks.id, {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No tasks were found.</strong>
        </p>
        <% } %>
    </div>
</div>
